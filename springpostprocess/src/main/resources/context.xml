<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:context="http://www.springframework.org/schema/context"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <!-- Activate annotation PostConstruct PreDestroy   -->
    <!-- <bean class="org.springframework.context.annotation.CommonAnnotationBeanPostProcessor"/> -->
    <context:annotation-config />
    <context:component-scan base-package="com...."/>
    <bean class="com.mazeltov.beanpostprocess.InjectRandomIntAnnotationBeanPostProcessor" />
    <bean class="com.mazeltov.beanpostprocess.BenchmarkAnnotationBeanPostProcessor" />
    <bean class="com.mazeltov.listner.ApplicationContextReadyListener"/>

    <bean class="com.mazeltov.customannotation.Human" id="human">
        <property name="message" value="hello" />
    </bean>
    <bean class="com.mazeltov.custompoxy.SuperDuperBusinessLogicImpl">

    </bean>
</beans>